<h2 class="mb-4">Your ideas</h2>
<!-- implement search bar -->
{{#if ideas}}
    {{#each ideas}}
    <div class="card card-body mb-2">
        <h4>{{title}}</h4>
        <p>{{description}}</p>
        <p class="mb-0 font-weight-bold">Consumer Segment</p>
        <p>{{consumers}}</p>
        <p class="mb-0 font-weight-bold">Competitors</p>
        <p>{{competitors}}</p>
        <a class="btn btn-secondary btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
        <form method="post" action="/ideas/{{id}}?_method=DELETE">
            <input type="submit" class="btn btn-danger btn-block" value="Delete">
        </form>
    </div>
    {{/each}}

{{else}}
    <h4>Your unicorn idea will hit you soon!</h3>
{{/if}}